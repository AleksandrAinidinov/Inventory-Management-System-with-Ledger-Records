<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Inventory Ledger</title>
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
  <div class="container mt-3">
    <h1>Inventory Ledger</h1>
    <a href="/" class="btn btn-secondary mb-3">Back to Inventory</a>
    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Inventory ID</th>
          <th>Action</th>
          <th>Details</th>
          <th>Date</th>
        </tr>
      </thead>
      <tbody>
        <% operations.forEach(operation => { %>
          <tr>
            <td><%= operation.id %></td>
            <td><%= operation.inventoryId %></td>
            <td><%= operation.action %></td>
            <td><%= operation.details %></td>
            <td><%= operation.date.toLocaleString("en-US") %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
